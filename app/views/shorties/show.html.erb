<div class="container-fluid">
  <h1><%= @shorty.name %></h1>
  <div class="card-product m-5">
    <img src="https://robohash.org/faker" />
      <div class="card-product-infos">
        <h2><%= @shorty.name %></h2>
        <p><%= @shorty.height %></p>
        <p><%= @shorty.price %></p>
        <p><%= @shorty.description %></p>
    <%= link_to shorty_path(@shorty), method: :delete, data: {confirm: 'Are you sure you want to delete this shorty?'} do %>
    <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
</div>
</div>
